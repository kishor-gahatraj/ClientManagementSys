@model IEnumerable<ClientManagementSys.Models.Invoice>
@using ClientManagementSys.Areas.Identity.Data
@inject SignInManager<ApplicationUser> _signInManager;
@{
    ViewData["Title"] = "Index";
    Layout = "";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://code.iconify.design/2/2.2.1/iconify.min.js"></script>
    <link rel="stylesheet" href="/css/invoicelist.css">
    <script src=""></script>
    <title>Document</title>
</head>
<body>
     <div class="container">
         <span> <partial name="_DashBoardPartial" /></span>
        <div class="dashboard">
            <div class="top-nav">
                <p class="cms">Client Management System</p>
              <span > <partial name="_LoginPartial" /></span>
            </div>

            <div class="client">


                <div class="search-client">
                    <label style="font-size: 16px; font-weight: 550;">All Invoice</label>
                    <input type="text" value="search invoice">
                    <button type="submit"><i class="fa fa-search"></i></button>
                    <a asp-action="Create"> <i style="font-size:13px" class="fa">&#xf067;</i> Add Invoice</a>
                </div>



            </div>

            <div class="client-table">
                <div style="overflow-x:auto;">
                    <table>
                        <tr>
                            <th>Invoice No</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Credit</th>
                            <th>Debit</th>
                            <th>Product Name</th>
                            <th>Organization Name</th>
                            <th>Status</th>
                            <th>Action</th>


                        </tr>
                        <tr class="client-list">
                        <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                            @Html.DisplayFor(modelItem => item.Invoice_No)
                                    </td>
                                    <td>
                                            @Html.DisplayFor(modelItem => item.Amount)
                                    </td>
                                    <td>
                                            @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>
                                            @Html.DisplayFor(modelItem => item.Credit)
                                    </td>
                                    <td>
                                            @Html.DisplayFor(modelItem => item.Debit)
                                    </td>
                                    <td>
                                            @Html.DisplayFor(modelItem => item.Product.Product_Name)
                                    </td>
                                    <td>
                                            @Html.DisplayFor(modelItem => item.Organization.Org_Name)
                                    </td>
                                    <td>
                                    @if (item.Credit>item.Debit)
                                    {
                                        <button class="inactives">Pending</button>
                                    }
                                    else
                                    {
                                        <button class="actives">Paid</button>
                                    }
                                </td>
                                    <td class="actions">
                                        <button><a asp-action="Edit" asp-route-id="@item.Invoice_Id">Update</a></button>
                                            @*<button><a>View</a></button>*@

                                    </td>
                                </tr>
                                }
                        </tbody>
                    </table>


                    <div class="footer">
                        <p>Client Management system 2022 by Silicon soft Nepal</p>
                    </div>



                </div>



            </div>

            <script src="/js/navbar.js"></script>
</body>
</html>


















