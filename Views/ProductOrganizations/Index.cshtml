@model IEnumerable<ClientManagementSys.Models.ProductOrganization>
@using ClientManagementSys.Areas.Identity.Data
@inject SignInManager<ApplicationUser> _signInManager;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Organization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Organization.Org_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Product_Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {  Product_Id = item.Product_Id, Org_Id = item.Org_Id }) |
                    @Html.ActionLink("Details", "Details",new {  Product_Id = item.Product_Id, Org_Id = item.Org_Id }) |
                    @Html.ActionLink("Delete", "Delete", new {  Product_Id = item.Product_Id, Org_Id = item.Org_Id })
                </td>
            </tr>
        }
    </tbody>
</table>
