@model ClientManagementSys.ViewModel.EditRoleViewModel

@*@{
    ViewData["Title"] = "Create";
    }*@
<h1>Edit Role</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" class="mt-3">


            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" disabled class="form-control" />
              
            </div>

            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" disabled class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
               @* <button type="submit" value="Create" class="btn btn-primary" /> Update *@
                <a asp-action="ListRoles" class="btn btn-primary">List of Roles</a>
            </div>


            <div class="card-header">
                <h3>User In Role</h3>

            </div>
            <div class='card-body'>
                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <h5 class="card-title">@user</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">Not at the moment</h5>

                }


            </div>
            <div class='card-footer'>
                <a asp-action="EditUsersInRole" asp-asp-controller="Administration"
                   asp-route-roleId="@Model.Id" class="btn btn-primary " style="width:auto">Add User or Remove User</a>
            </div>





        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
