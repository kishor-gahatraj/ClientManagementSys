@model IEnumerable<ClientManagementSys.Models.Counter_Table>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Total_Organization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product_Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total_User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Total_Organization)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product_Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total_User)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Counter_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Counter_Id">Details</a> |
