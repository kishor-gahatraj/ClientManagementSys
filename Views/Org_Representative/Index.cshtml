@model IEnumerable<ClientManagementSys.Models.Org_Representative>
@using ClientManagementSys.Areas.Identity.Data
@inject SignInManager<ApplicationUser> _signInManager;
@{
    ViewData["Title"] = "Index";
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://code.iconify.design/2/2.2.1/iconify.min.js"></script>
    <link rel="stylesheet" href="/css/productlist.css" asp-append-version="true"/>
    <script src=""></script>
    <title>Document</title>
</head>
<body>
    
       <div class="container">
         <span> <partial name="_DashBoardPartial" /></span>
        <div class="dashboard">
            <div class="top-nav">
                <p class="cms">Client Management System</p>
               <span > <partial name="_LoginPartial" /></span>
            </div>
            <div class="client">


                <div class="search-client">
                    <label style="font-size: 16px; font-weight: 550;">Representative</label>
                    <input type="text" value="Search Representative">
                    <button type="submit"><i class="fa fa-search"></i></button>
                    <a asp-action ="Create"> <i style="font-size:13px" class="fa">&#xf067;</i>Representative</a>
                </div>
            </div>

            <div class="client-table">
                <div style="overflow-x:auto;" class="table-main">
                    <table class="table-sort">
                        <tr>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Contact</th>
                            <th>Organization</th>
                            <th>Address</th>
                            
                            <th>Status</th>
                            <th>Actions</th>


                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr class="client-list">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Representative_FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Representative_Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Organization.Org_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Representative_Address)
                                </td>
                                <td>
                                    @if (@item.Representative_Status)
                                    {
                                        <button class="actives">Active</button>
                                    }
                                    else
                                    {
                                        <button class="inactives">Inactive</button>
                                    }
                                </td>
                                <td class="actions">
                                    <button> <a style="text-decoration:none" asp-action="Edit" asp-route-id="@item.Representative_Id">Update</a></button> 
                                    <button> <a style="text-decoration:none" asp-action="Details" asp-route-id="@item.Representative_Id">Views</a> </button>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>

            <div class="pagination">
                <a href="#">&laquo;</a>
                <a href="#">1</a>
                <a href="#">2</a>
                <a href="#">3</a>
                <a href="#">4</a>
                <a href="#">5</a>
                <a href="#">6</a>
                <a href="#">&raquo;</a>

            </div>


            <div class="footer">
                <h6>Client Management system @*@2022*@ by Silicon soft Nepal</h6>
            </div>

        </div>
    </div>
    <script src="/js/navbar.js"></script>
</body>
</html>

















